@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clothing Store Cashier</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f4f4f4;
        }

        .container {
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Clothing Store Cashier</h1>
        <div class="row">
            <div class="col-md-8">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Product items will be added here dynamically -->
                    </tbody>
                </table>
            </div>
            <div class="col-md-4">

                <div class="form-group">
                    <input type="text" class="form-control" id="product-name" placeholder="Product Name">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" id="product-price" placeholder="Price">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" id="product-quantity" placeholder="Quantity">
                </div>

                <button class="btn btn-success" id="add-product">Add Product</button>


                <br />
                <br />

                <h3>Total: $<span id="total">0.00</span></h3>
                <button class="btn btn-primary">Complete Sale</button>
                <button class="btn btn-danger" id="cancel">Cancel Sale</button>
            </div>
        </div>

    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            let total = 0;

            // Add product to the table
            $('#add-product').click(function () {
                const name = $('#product-name').val();
                const price = parseFloat($('#product-price').val());
                const quantity = parseInt($('#product-quantity').val());

                if (name && !isNaN(price) && !isNaN(quantity)) {
                    const productTotal = price * quantity;
                    total += productTotal;
                    $('#total').text(total.toFixed(2));

                    const newRow = `
                <tr>
                  <td>${name}</td>
                  <td>$${price.toFixed(2)}</td>
                  <td>${quantity}</td>
                  <td>$${productTotal.toFixed(2)}</td>
                </tr>
              `;
                    $('tbody').append(newRow);

                    // Clear input fields
                    $('#product-name').val('');
                    $('#product-price').val('');
                    $('#product-quantity').val('');
                }
            });
        });
    </script>
    
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Script/jquery-3.4.1.min.js"></script>
</body>
</html>
